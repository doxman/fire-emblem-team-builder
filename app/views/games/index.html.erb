<h1>Listing Games</h1>
<%= link_to 'New game', new_game_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Full name</th>
    <th>Difficulty</th>
    <th colspan="3"></th>
  </tr>

  <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= game.full_name %></td>
      <td><%= game.difficulty %></td>
      <td><%= link_to 'Show', game_path(game) %></td>
      <td><%= link_to 'Edit', edit_game_path(game) %></td>
      <td><%= link_to 'Destroy', game_path(game),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
