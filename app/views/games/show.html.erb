<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>
<p>
  <strong>Full name:</strong>
  <%= @game.full_name %>
</p>

<h2>Characters</h2>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>

  <% @game.characters.each do |character| %>
    <tr>
      <td><%= character.name %></td>
      <td><%= link_to 'Show', game_character_path(@game, character) %></td>
      <td><%= link_to 'Edit', edit_game_character_path(@game, character) %></td>
      <td><%= link_to 'Destroy', game_character_path(@game, character),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<h2>Add a character:</h2>
<%= render 'characters/form' %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
